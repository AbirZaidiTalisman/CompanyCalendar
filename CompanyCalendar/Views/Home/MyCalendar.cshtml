                            </div>

                            @*Reminder All*@
                            @*<div class="row">
                                <div class="form-group">
                                    <div class="">
                                        <label><input type="radio" id="rdRemindAll" name="RemindAll" value="All" /> <strong> For All</strong></label>
                                    </div>
                                </div>
                            </div>*@
                        </div>
                        </div>




                        <div class="col-lg-12">
                            <div class="col-lg-6">
                                @*Location*@
                                <div class="row" id="locdiv">
                                    <div class="form-group">
                                        <label>Meeting Location</label>
                                        <select id="ddEventLoc" class="form-control">
                                            <option value="TL1_BR1" selected="selected">TL1 Board Room 1</option>
                                            <option value="TL1_BR2">TL1 Board Room 2</option>
                                            <option value="TL1_PMR">TL1 Production Meeting Room</option>
                                            <option value="TL1_MR1">TL1 Meeting Room 1</option>
                                            <option value="HEL_MR">Helicon Meeting Room</option>
                                            <option value="FCI_BR">FCI Board Room</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="row">
                                    <label style="visibility:hidden">.</label>
                                </div>
                                <div class="row">
                                    <button type="button" id="btnSave" class="btn btn-success" style="float:right">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


