            $('#btnSave').click(function () {
                //Validation/
                if ($('#txtSubject').val().trim() == "" && ($("#ddlEventType option:selected").text() == "Meeting" || $("#ddlEventType option:selected").text() == "Personal")) {
                    alert('Subject required');
                    return;
                }
                if ($('#txtStart').val().trim() == "") {
                    alert('Start date required');
                    return;
                }

                if ($('#chkIsFullDay').is(':checked') == false && $('#txtEnd').val().trim() == "") {
                    alert('End date required');
                    return;
                }
                else {
                    var startDate = moment($('#txtStart').val(), "DD/MM/YYYY hh:mm a").toDate();

                    var endDate = moment($('#txtEnd').val(), "DD/MM/YYYY hh:mm a").toDate();
                    if (startDate > endDate) {
                        alert('Invalid end date');
                        return;
                    }
                }

                //if ($('#chkRecur').is(':checked') == true) {
                //    alert('Recur End date required');
                //    return;
                //}

                var selectedValues = [];
                $('#members input:checked').each(function () {
                    selectedValues.push($(this).val());
                });

                var checkedRadio = '';
                if (document.getElementById('rdOnlyThis').checked) {
                    checkedRadio = 'only';
                }else if(document.getElementById('rdOnward').checked) {
                    checkedRadio = 'onward';
                }

                var data = {
                    EventID: $('#hdEventID').val(),
                    RecurID: $('#hdRecurID').val(),
                    Subject: $('#txtSubject').val().trim(),
                    Start: $('#txtStart').val().trim(),
                    End: $('#chkIsFullDay').is(':checked') ? null : $('#txtEnd').val().trim(),
                    Description: $('#txtDescription').val(),
                    ThemeColor: $('#ddThemeColor').val(),
                    IsFullDay: $('#chkIsFullDay').is(':checked'),
                    EventLocation: $('#ddEventLoc').val(),
                    EventType: $('#ddlEventType').val(),
                    IsRecur: $('#chkRecur').is(':checked'),
                    RecurType: $('#ddlRepeat').val(),
                    RecurEnd: $('#txtReEnd').val(),
                    selectedValues: selectedValues,
                    editType: checkedRadio,
                    ExceptDay: $('#ddlExceptDay').val(),
                    Reminder: $('#ddlReminder').val()
                }
                SaveEvent(data);

            })
            // call function for submit data to the server
            function SaveEvent(data) {
                $.ajax({
                    type: "POST",
                    url: '/home/SaveEvent',
                    data: data,
                    success: function (data) {
                        if (data.status) {
                            //Refresh the calender
                            FetchEventAndRenderCalendar();
                            $('#myModalSave').modal('hide');
                            window.location.reload();
                            GenerateCalender(events);
                        }
                    },
                    error: function () {
                        alert('Failed');
                    }
                })
            }

        }
