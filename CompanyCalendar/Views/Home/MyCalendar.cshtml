@* edit form start *@


<div id="myModalSave" class="modal fade" role="dialog" style="overflow:auto">
    <div class="modal-dialog">
        <div class="modal-content col-lg-12">
            <div class="modal-header">
                <div class="row">
                    <div class="col-12">
                        <div class="col-lg-3">
                            <h4 class="modal-title">Save Event</h4>
                        </div>

                        <div class="col-lg-9 float-right">
                            <button type="button" class="btn btn-default" data-dismiss="modal" style="float:right"><span class="glyphicon glyphicon-remove"></span></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="row">
                        @*Subject*@
                        <div class="col-lg-12" id="subjectdiv">
                            <div class="">
                                <div class="form-group">
                                    <label>Subject</label>
                                    <input type="text" id="txtSubject" class="form-control" style="max-width: none" placeholder="Type Meeting Subject" />
                                </div>
                            </div>
                        </div>


                        <div class="col-lg-12">
                            <div class="col-lg-6">
                                @*Start Time*@
                                <div class="row">
                                    <div class="form-group">
                                        <label>Start</label>
                                        <div class="input-group date" id="dtp1">
                                            <input type="text" id="txtStart" class="form-control" />
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-1"></div>
                            <div class="col-lg-5">
                                <div id="isfulldaydiv">
                                    @*Is Full Day*@
                                    <label style="visibility:hidden">.</label>
                                    <div class="checkbox">
                                        <label><input type="checkbox" id="chkIsFullDay" checked="checked" /> <strong>Full Day</strong></label>
                                    </div>
                                </div>
                            </div>
                        </div>



                        <div class="col-lg-12">
                            @*left Side*@
                            <div class="col-lg-6">
                                <input type="hidden" id="hdEventID" value="0" />
                                <input type="hidden" id="hdRecurID" value="" />
                                <div class="row">
                                    <div class="col-lg-12">
                                        @*End Time*@
                                        <div class="row">
                                            <div class="form-group">
                                                <div id="divEndDate">
                                                    <label>End</label>
                                                    <div class="input-group date" id="dtp2">
                                                        <input type="text" id="txtEnd" class="form-control" />
                                                        <span class="input-group-addon">
                                                            <span class="glyphicon glyphicon-calendar"></span>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @*Event Type*@
                                <div class="row">
                                    <div class="form-group">
                                        <label>Event Type</label>
                                        <select id="ddlEventType" class="form-control">
                                            <option value="Meeting">Meeting</option>
                                            <option value="Leave">Leave</option>
                                            <option value="Personal">Personal</option>
                                        </select>
                                    </div>
                                </div>

                                @*Participants*@
                                <div class="row" id="partydiv">
                                    <div class="">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <label>Participants (case-sensetive:)</label>
                                                <input type="text" id="myInput" class="form-control" placeholder="Search here...">
                                            </div>
                                        </div>
                                        <div style="margin-top:10px"></div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    <div id="members" class="form-horizontal" style="height: 100px; overflow-y: auto; overflow-x: hidden; overflow-y: scroll">
                                                        <ul class="cb-container">
                                                            @foreach (var item in ViewBag.party)
                                                            {

                                                                <li>
                                                                    <label>
                                                                        <input id="@item.Value"
                                                                               name="selectedMembers"
                                                                               type="checkbox"
                                                                               value="@item.Text"
                                                                               checked="@item.IsChecked" />
