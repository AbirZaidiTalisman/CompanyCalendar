                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @*Is Full Day*@
                                @*<div class="row" id="isfulldaydiv">
                                        <div class="form-group">
                                            <label style="visibility:hidden">.</label>
                                            <div class="checkbox">
                                                <label><input type="checkbox" id="chkIsFullDay" checked="checked" /> <strong>Full Day</strong></label>
                                            </div>
                                        </div>
                                    </div>*@

                                @*Color*@
                                <div class="row" id="colordiv">
                                    <div class="form-group">
                                        <label>Priority</label>
                                        <select id="ddThemeColor" class="form-control">
                                            <option value="#ff9999" selected="selected">High</option>
                                            <option value="#ffff66">Medium</option>
                                            <option value="#e6e6ff">Low</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            @*Middle*@
                            <div class="col-lg-1">
                                <div class="">
                                </div>
                            </div>

                            @*Right Side*@
                        <div class="col-lg-5">
                            <div class="row"></div>
                            @*Is Recur*@
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-lg-6">
                                        <label style="visibility:hidden">.</label>
                                        <div class="checkbox">
                                            <label><input type="checkbox" id="chkRecur" checked="checked" /> <strong>Recur</strong></label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div id="isRepeatdiv">
                                @*Recur Type*@
                                <div class="row" id="editRecurType">
                                    <div class="form-group">
                                        <div class="col-lg-6">
                                            <label><input type="radio" id="rdOnlyThis" name="EditChoice" value="only" /> <strong> Only This</strong></label>
                                        </div>
                                        <div class="col-lg-6">
                                            <label><input type="radio" name="EditChoice" id="rdOnward" value="onward" checked="checked" /> <strong> ONW</strong></label>
                                        </div>
                                    </div>
                                </div>

                                @*Repeat Section*@
                                <div class="row">
                                    <div class="form-group">
                                        <label>Repeat:</label>
                                        <select id="ddlRepeat" class="form-control">
                                            <option value="Daily" selected="selected">Daily</option>
                                            <option value="Weekly">Weekly</option>
                                            <option value="Monthly">Monthly</option>
                                            <option value="Yearly">Yearly</option>
                                        </select>
                                    </div>
                                </div>

                                @*Except Day*@
                                <div class="row">
                                    <div class="form-group">
                                        <label>Except Day:</label>
                                        <select id="ddlExceptDay" class="form-control">
                                            <option value="None" selected="selected">None</option>
                                            <option value="Saturday">Saturday</option>
                                            <option value="Sunday">Sunday</option>
                                            <option value="Monday">Monday</option>
                                            <option value="Tuesday">Tuesday</option>
                                            <option value="Wednesday">Wednesday</option>
                                            <option value="Thursday">Thursday</option>
                                            <option value="Friday">Friday</option>
                                        </select>
                                    </div>
                                </div>

                            </div>

                            @*Reminder*@
                            <div class="row">
                                <div class="form-group">
                                    <label>Reminder</label>
                                    <select id="ddlReminder" class="form-control">
                                        <option value="0" selected="selected">No Reminder</option>
                                        <option value="5">Before 5 minutes</option>
                                        <option value="10">Before 10 minutes</option>
                                        <option value="15">Before 15 minutes</option>
                                        <option value="20">Before 20 minutes</option>
                                        <option value="25">Before 25 minutes</option>
                                        <option value="30">Before 30 minutes</option>
                                        <option value="35">Before 35 minutes</option>
                                        <option value="40">Before 40 minutes</option>
                                        <option value="45">Before 45 minutes</option>
                                        <option value="50">Before 50 minutes</option>
                                        <option value="55">Before 55 minutes</option>
                                        <option value="60">Before 60 minutes</option>
                                    </select>
